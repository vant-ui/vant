{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@demo/*": ["docs/site/*"]
    }
  },
  "include": ["types/**/*", "docs/**/*", "src/**/*"],
  "exclude": ["**/index.spec.ts", "**/*.spec.js", "node_modules"]
}
